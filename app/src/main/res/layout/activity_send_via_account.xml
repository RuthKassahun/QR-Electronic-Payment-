<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SendViaAccount">

    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <View
        android:id="@+id/topview"
        android:layout_width="447dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/purple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:text="SEND VIA BANK ACCOUNT"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/topview"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viaQR"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="550dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_item"

        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r12"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/r11"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE BANK"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/bank"
            />

        <Spinner
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dropdown"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_item"
            android:padding="10dp"
            android:entries="@array/bankNames"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECIPENT ACCOUNT"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/spinner_dropdown"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/jg"
            />
        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/et6"
            android:hint="Enter Recipent Account Number"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:maxLength="15"
            android:background="@drawable/background_item"
            android:padding="10dp"
           android:layout_below="@id/jg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/et6"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/tv"
            />
        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/et7"
            android:hint="Enter amount to transfer"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:maxLength="15"
            android:background="@drawable/background_item"
            android:padding="10dp"
            android:layout_below="@id/tv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REASON"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/et7"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/tvv"
            />
        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/et8"
            android:hint="Enter reason here"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:maxLength="15"
            android:background="@drawable/background_item"
            android:padding="20dp"
            android:layout_below="@id/tvv"
            />

        <Button
            android:id="@+id/btnContinue"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="215dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"
            android:layout_below="@+id/et8"
            android:background="@drawable/gradient_button"
            android:text="Continue"/>

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>